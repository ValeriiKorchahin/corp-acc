generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

// Products

model Product {
  id             String   @id @default(uuid())
  companyId      String   @map("company_id")
  name           String
  defaultPrice   Decimal  @map("default_price") @db.Decimal(10, 2)
  isActive       Boolean  @default(true) @map("is_active")
  vatId          String? @map("vat_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  deletedAt      DateTime? @map("deleted_at")

  vat Vat? @relation(fields: [vatId], references: [id], onDelete: SetNull)

  @@map("products")
  @@index([vatId])
  @@index([companyId])
  @@index([isActive])
  @@index([deletedAt])
}

// VAT

model Vat {
  id String @id @default(uuid())
  companyId String @map("company_id")
  name String
  rate Decimal @db.Decimal(5, 2)
  isActive Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  products Product[]
  InvoiceItem InvoiceItem[]

  @@map("vats")
  @@index([isActive])
  @@index([companyId])
  @@index([deletedAt])
}

// Invoice

model Invoice {
  id String @id @default(uuid())
  companyId String @map("company_id")
  customerId String @map("customer_id")
  number String @unique
  status InvoiceStatus @default(DRAFT)
  issueDate DateTime @map("issue_date")
  dueDate DateTime? @map("due_date")
  paymentDate DateTime? @map("payment_date")
  amountPaid Decimal @default(0) @db.Decimal(10, 2) @map("amount_paid")
  subTotal Decimal @db.Decimal(10, 2) @map("subt_total")
  vatTotal Decimal @db.Decimal(10, 2) @map("vat_total")
  total Decimal @db.Decimal(10, 2)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  invoiceItems InvoiceItem[]

  @@unique([companyId, number])
  @@index([companyId, status, customerId, issueDate, deletedAt])
  @@map("invoices")
}

model InvoiceItem {
  id String @id @default(uuid())
  invoiceId String @map("invoice_id")
  productId String @map("product_id")
  vatId String @map("vat_id")
  name String
  quantity Decimal @db.Decimal(10, 2)
  price Decimal @db.Decimal(10, 2)
  discount Decimal @default(0) @db.Decimal(5, 2)
  vatRate Decimal @db.Decimal(5, 2) @map("vat_rate")
  subTotal Decimal @db.Decimal(10, 2) @map("sub_total")
  vatAmount Decimal @db.Decimal(10, 2) @map("vat_amount")
  total Decimal @db.Decimal(10, 2)

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  vat Vat @relation(fields: [vatId], references: [id])

  @@index([invoiceId, productId])
  @@map("invoice_items")
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  PARTLY_PAID
  PAID
  CANCELED
}